<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>BugSplat</Authors>
    <Description>.NET Standard 2.0 zip file creator library with glob support</Description>
    <Copyright>BugSplat, All Rights Reserved</Copyright>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/BugSplat-Git/ZipCreator</PackageProjectUrl>
    <RepositoryUrl>https://github.com/BugSplat-Git/ZipCreator</RepositoryUrl>
    <PackageTags>zip dotnet glob archive compress files library</PackageTags>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>Fix extra folder at root of zip</PackageReleaseNotes>
    <AssemblyVersion>1.0.1.0</AssemblyVersion>
    <FileVersion>1.0.1.0</FileVersion>
    <Version>1.0.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.FileSystemGlobbing" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
